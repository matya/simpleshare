<div id="page">
    <div id="filelist">
        <form action="<% action_url %>" method="post">
        <% IF files.size %>
            <h2> Shared files: </h2>
            <br>
            <table class=upload_t>
            <tr>
            <% FOREACH dir IN files.keys.sort %>

                 <td><a href="<% shared_url %>/<% dir %>"> <% dir %> </a></td>
                 <td><input type="checkbox" id="selecctall"/> Selecct All</td>
                    <% FOREACH file IN files.$dir %>
                        <tr>
                        <td><a href="<% sharedir %>/<% dir %>/<% file %>"> <% file %> </a></td>
                        <td><input class="checkbox<% dir %>" type="checkbox" name="filelist" value="<% file %>"></td><tr>
                        </tr>
                    <% END %>

            <% END %>

        <% END %>
            </table>
        <br>
        <H2> Action </H2>
        <br>
        <input type="submit" name="action" value="unshare" id="unshare">
        <input type="submit" name="action" value="delete" id="delete">
        </form>
    </div>
</div>
